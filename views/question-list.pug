extends home.pug

append head
  link(rel="stylesheet" href="/stylesheets/question-list.css")

block content

  div(class="container")
    div(class="left-container")
    div(class="middle-container")
      div(class='post-question')
      a(class='btn btn-ask-quest' href='/question/add' role='button') What is your question or link?
      table(class='table table-striped table-hover')
        thead(class='thead-dark')
          tr
            th(scope='col') Questions
        tbody(class="quesions-row")
          each answer in answers
            tr
              td= ''
                  div(class='py-3')
                    a(class='btn display-question' href=`/question/${answer.questionId}` role='button')  #{answer.Question.title}
                  div(class='py-3')
                  a(class='btn display-answer' href=`/answer/${answer.id}` role='button') #{answer.body}
                  br
                  a(class='btn btn-success' href=`/question/${answer.questionId}/add` role='button') Add Answer
            tr( class="spacer")
    div(class="right-container")
    footer
