extends question-detail.pug

append head

    link(rel="stylesheet" href="/stylesheets/answer-form.css")

include utils.pug

block content
    div(class='main-container')
      div(class='left-container')
      div(class='middle-container')
        div(class='content-container')
          form(action=`/answer/${answer.id}/edit` method='post')
              input(type='hidden' name='_csrf' value=csrfToken)
              h2(id='header') #{question.title}
              +validationErrorSummary(errors)
              h3
              +field( null, 'body', answer.body, 'textarea')
              div(class='answer-cancel-btn')
                div(class='button-div')
                  button(type='submit' id='answer') Submit
                div(class='anchor-div')
                  a(href=`/question/${question.id}` id='cancel') Cancel
      div(class='right-container')
