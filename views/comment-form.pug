extends answer-detail.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/answer/${answer.id}/add` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Comment', 'body', answer.body)
        div(class='#')
          button(type='submit' class='#') Comment
          a(href=`/question/${answer.id}`) Cancel
