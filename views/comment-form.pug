extends home.pug

append head
  link(rel="stylesheet", href="/stylesheets/comment-form.css")
include utils.pug

block content
  div(class='main-container')
    div(class='left-container')
    div(class='middle-container')
      div(class='content-container')
        form(action=`/answer/${answer.id}/add` method='post')
          input(type='hidden' name='_csrf' value=csrfToken)
          h2(id='header') #{answer.body}
          +validationErrorSummary(errors)
          +field( null, 'body', null , 'textarea')
          div(class='answer-cancel-btn')
            div(class='button-div')
              button(type='submit' id='answer' href=`/answer/${answer.id}/add`) Comment
            div(class='anchor-div')
              a(href=`/question/${answer.questionId}` id='cancel') Cancel
    div(class='right-container')
