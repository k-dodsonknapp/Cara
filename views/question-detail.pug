extends home.pug

append head
  link(rel="stylesheet" href="/stylesheets/question-detail.css")

block content
  if question
    div(class='q-text')
    h3= question.title
    div(class='py-3')
      a(class='btn btn-success' href=`/questions/${question.id}/edit` role='button') Edit Question
    if answers
      div(class='answerDiv')
      each answer in answers
          h4= answer.body
          a(class='btn btn-success' href=`/answer/${answer.id}/edit` role='button') Edit Answer
            div(class='commentDiv')
              a(class='commentBtn btn' href=`/answer/${answer.id}/add` role='button') Add Comment
