extends question-detail.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/question/${question.id}/add` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Answer', 'body', question.body)
        div(class='#')
          button(type='submit' class='#') Answer this question
          a(href=`/question/${question.id}`) Cancel
