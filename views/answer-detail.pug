extends question-detail.pug

append head

    link(rel="stylesheet" href="/stylesheets/answer-detail.css")


block content
    if answer
      div(class='main-container')
        div(class="content-container")
            h5 Answer:
                h3= answer.body
                    div(class='py-3')
                        a(class='add-comment-btn' href=`/answer/${answer.id}/add` role='button') Add Comment
                        //if comments
                div(class='comments')
                    h5 Comments:
                each comment in comments
                    h4= comment.body
                    button(type='submit' class='#' href=`/comment/${comment.id}/delete`) Delete
