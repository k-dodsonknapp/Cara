extends home.pug

append head

    link(rel='stylesheet' href='/stylesheets/topic-questions.css')

block content
    if topic
        div(class='main-container')
            div(class='left-container') 
                div(class='topic-container')
                    table(class='topic-table')
                        thead(class='thead-dark')
                            tr
                                th(scope='col' class="topic-th") TOPICS
                                    tbody(class="topic-row")
                                    each current in topics
                                        tr(class="topic-row")
                                            td= ''
                                                a(type='submit' class='topic-link' role='button' href=`/topic/${current.id}/questions`)= current.name
            div(class='middle-container')
                table(class='table table-striped table-hover')
                    thead(class='thead-dark')
                        tr
                            th(scope='col') #{topic.name}
                    tbody(class="quesions-row")
                        each question in questions
                            tr 
                                td=''     
                                    p #{question.title}
                        tr( class="spacer")
            div(class='right-container') 
    