extends home.pug

append head
  link(rel="stylesheet", href="/stylesheets/question-edit.css")

include utils.pug

block content
  div.main-container
    div.left-container
    div.middle-container
      div.content-container
        +validationErrorSummary(errors)
        form(action=`/questions/${question.id}/edit` method='post')
          input(type='hidden' name='_csrf' value=csrfToken)
          +field("Edit Your Question", "title", question.title, fieldType = 'textarea')
          div.topics-dropdown
            label(for="topicId" id="topics-label2") Topics
              select(name="topicId" required)
                each topic in topicsIdArr
                  option(value=topic.id)= topic.name
            div.submit-cancel-btns
              button(type='submit' class='submit-button') Submit
              a(href='/home' class='cancel-button') Cancel
    div.right-container
