
extends home.pug


include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/question/add' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field("Question", "title", null, fieldType = 'textarea')
    label(for="topicId") Topics
    select(name="topicId" required)
      each topic in topicsId
        option(value=topic.id)=topic.name 
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Add Question
      a(href='/home' class='btn btn-warning ml-2') Cancel
