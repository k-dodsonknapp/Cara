doctype html
html(lang="en")
    head
        block head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css")
        link(rel="stylesheet" href="/stylesheets/index.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@600&display=swap" rel="stylesheet")
        script(type="module" src="/javascripts/search.js" )
        a(href="/home" id="home-btn")
         title= "Carra"

    body
        nav#nav-header
            ul(id="logo-title-div")
              a(id="carra-logo" class="carra-logo" href="/home") Carra

            ul(id="home-button-div" href="/home")
            a(href="/home" class="nav-btn")
              i(class="fas fa-home")

            ul(id="topics-button-div" href='/topic/1/questions')
              a(href='/topic/1/questions' class="nav-btn")
                i(class="fa fa-users")

            ul(id="answer-button-div" href="/question/add")
              a(href='/question/add' class= "nav-btn")
                i(class="fas fa-keyboard")

            ul(id="search-container")
              form(action="/search/" method="POST" class="search-container" id="search-container")
                input(type="text" name="text" class="search-bar" placeholder="Search")
                button(type="submit" name="search-container" class="search-bar-submit-button" value="Search")
                  i(class="fa fa-search")

            if locals.authenticated
              ul(class="signed-in")
                i(id="welcome-username") Welcome home, #{user.username}!
                button(type="submit" class="logout-button"): a(id="logout" href='/') Log out
        block content

        block footer
            #footer
              div(id="footer-container")
                ul(id="developer-credits") Developers:
                  a(class="fab fa-github" href="https://github.com/GoodWillHunting11")
                    li(class="names") Aaron Short
                  a(class="fab fa-github" href="https://github.com/otmcz")
                    li(class="names") Chris Ramos
                  a(class="fab fa-github" href="https://github.com/Eric-Cortez")
                    li(class="names") Eric Cortez
                  a(class="fab fa-github" href="https://github.com/k-dodsonknapp")
                    li(class="names") Kenneth Dodson-Knapp
